
<%- layout('layouts/main.ejs')  %>




<div class="row">
  <div class="col-md-4 offset-md-4">
      <div class="card mt-4 text-center">
          <div class="card-header">
              <h3>Chat</h3>                    
          </div>
          <div class="card-body">                
              <form id="messageForm">
                  <div class="form-group">
                    <input type="email" class="form-control" id="emailInput" name="email" placeholder="Insert E-mail" aria-describedby="email">
                  </div>
                  <% if (userData) { %>
                      <input type="radio" id="typelInput" name="customRadio" class="custom-control-input" value="Usuario" disabled="">
                  <% } else { %>                
                      <input type="radio" id="typelInput" name="customRadio" class="custom-control-input" value="Sistema" disabled="">
                  <% } %>
                  <div class="form-group">
                      <input type="text" class="form-control" id="msgInput" name="message" placeholder="Insert Message" aria-describedby="message">
                  </div>
                  <div class="form-group">
                    <button type="button" id="btnMsg" class="btn btn-info btn-block mt4">Send</button>
                  </div>       
              </form>
          </div>
      </div>
  </div>
</div>


<div class="row">
  <table  class="table table-hover mt-4 ">
    <thead>
      <tr  class="table-info">
        <th scope="col">Email</th>
        <th scope="col">Type</th>
        <th scope="col">Dat</th>
        <th scope="col">message</th>
      </tr>
    </thead>
    <tbody id="msgList">

    </tbody>
  </table>
</div>
